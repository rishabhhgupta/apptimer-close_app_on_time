<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="2"
    android:rowCount="2"


    >

    <LinearLayout

        android:layout_row="0"

        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/marlin"
            android:text="10:20"
            android:id="@+id/time"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/marlin"
            android:text="am"
            android:id="@+id/amORpm"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_marginStart="40dp"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/timesRing"

            android:fontFamily="@font/marlin"


            android:gravity="center"
            android:text="Everyday"

            android:textSize="12dp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>


    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/onOrOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        
        android:layout_column="1"
        android:layout_gravity="bottom"
        android:layout_marginEnd="25dp"
        android:theme="@style/SCBSwitch"
        app:switcher_icon_color="@color/white"
        app:switcher_off_color="#42221F1F"
        app:switcher_on_color="@color/app_color" />

<!--    <com.google.android.material.switchmaterial.SwitchMaterial-->
